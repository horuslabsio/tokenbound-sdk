{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "Bundler",
      "strict": true,
      "jsx": "preserve",
      "outDir": "dist",
      "declaration": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noEmit": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": false,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["src/test"]
  }